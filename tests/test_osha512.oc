#include <time.h>
#include <stdio.h>
#include <obliv.oh>
#include <stdbool.h>

#include "openssl/sha.h"

#include "osha512.oh"
#include "test_generic.h"

static const char TESTNAME[] = "osha512";

char* testName() {
	return TESTNAME;
}

void testMain(void*varg) {

	obliv uint8_t digest[OSHA512_DIGEST_LENGTH];
	uint8_t digest2[SHA512_DIGEST_LENGTH];
	obliv uint8_t message[445];
	char plaintext[] = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.";
	int msglen = 445;

	for (int ii = 0; ii < msglen; ii++) {
		message[ii] = ocBroadcastChar(plaintext[ii], 1);
	}
	
	oSHA512_CTX ctx;
	oSHA512_Init(&ctx);
	SHA512_CTX ctx2;
	SHA512_Init(&ctx2);

	uint64_t state[8];
	for (int ii = 0; ii < 8; ii++) {
		revealOblivLong(&state[ii], ctx.state[ii], 0);
	}

	bool success =  ctx2.h[0] == state[0] && ctx2.h[1] == state[1] && ctx2.h[2] == state[2] && ctx2.h[3] == state[3] && \
					ctx2.h[4] == state[4] && ctx2.h[5] == state[5] && ctx2.h[6] == state[6] && ctx2.h[7] == state[7];
	fprintf(stderr, "Test Item: %-60s %s\n", "oSHA512_Init", (success)?STATUS_SUCCESS:STATUS_FAILURE);
	if (!success) {
		fprintf(stderr, "\tExpected:\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\n",\
			ctx2.h[0], ctx2.h[1], ctx2.h[2], ctx2.h[3], ctx2.h[4], ctx2.h[5], ctx2.h[6], ctx2.h[7]);
		fprintf(stderr, "\tActual: \t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\n",\
			state[0], state[1], state[2], state[3], state[4], state[5], state[6], state[7], state[8]);
	}
	
	oSHA512_Update(&ctx, message, OSHA512_BLOCK);
	SHA512_Update(&ctx2, plaintext, OSHA512_BLOCK);

	for (int ii = 0; ii < 8; ii++) {
		revealOblivLong(&state[ii], ctx.state[ii], 0);
	}

	bool success =  ctx2.h[0] == state[0] && ctx2.h[1] == state[1] && ctx2.h[2] == state[2] && ctx2.h[3] == state[3] && \
					ctx2.h[4] == state[4] && ctx2.h[5] == state[5] && ctx2.h[6] == state[6] && ctx2.h[7] == state[7];
	fprintf(stderr, "Test Item: %-60s %s\n", "oSHA512_Update - first round", (success)?STATUS_SUCCESS:STATUS_FAILURE);
	if (!success) {
		fprintf(stderr, "\tExpected:\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\n",\
			ctx2.h[0], ctx2.h[1], ctx2.h[2], ctx2.h[3], ctx2.h[4], ctx2.h[5], ctx2.h[6], ctx2.h[7]);
		fprintf(stderr, "\tActual: \t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\n",\
			state[0], state[1], state[2], state[3], state[4], state[5], state[6], state[7], state[8]);
	}

	oSHA512_Update(&ctx, &message[OSHA512_BLOCK], msglen - OSHA512_BLOCK);
	SHA512_Update(&ctx2, &plaintext[OSHA512_BLOCK], msglen - OSHA512_BLOCK);

	for (int ii = 0; ii < 8; ii++) {
		revealOblivLong(&state[ii], ctx.state[ii], 0);
	}

	bool success =  ctx2.h[0] == state[0] && ctx2.h[1] == state[1] && ctx2.h[2] == state[2] && ctx2.h[3] == state[3] && \
					ctx2.h[4] == state[4] && ctx2.h[5] == state[5] && ctx2.h[6] == state[6] && ctx2.h[7] == state[7];
	fprintf(stderr, "Test Item: %-60s %s\n", "oSHA512_Update - subsequent rounds", (success)?STATUS_SUCCESS:STATUS_FAILURE);
	if (!success) {
		fprintf(stderr, "\tExpected:\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\n",\
			ctx2.h[0], ctx2.h[1], ctx2.h[2], ctx2.h[3], ctx2.h[4], ctx2.h[5], ctx2.h[6], ctx2.h[7]);
		fprintf(stderr, "\tActual: \t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\n",\
			state[0], state[1], state[2], state[3], state[4], state[5], state[6], state[7], state[8]);
	}
	
	oSHA512_Final(digest, &ctx);
	SHA512_Final(digest2, &ctx2);

	bool success =  true;

	for (int ii = 0; ii < OSHA512_DIGEST_LENGTH; ii++) {
		uint8_t temp;
		revealOblivChar(&temp, digest[ii], 0);
		success &= (temp == digest2[ii]);
	}

	fprintf(stderr, "Test Item: %-60s %s\n", "oSHA512_Final", (success)?STATUS_SUCCESS:STATUS_FAILURE);
	if(!success){
		fprintf(stderr, "\tExpected State:\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\n",\
			ctx2.h[0], ctx2.h[1], ctx2.h[2], ctx2.h[3], ctx2.h[4], ctx2.h[5], ctx2.h[6], ctx2.h[7]);
		fprintf(stderr, "\tActual State: \t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\t%016llX\n",\
			state[0], state[1], state[2], state[3], state[4], state[5], state[6], state[7], state[8]);
		fprintf(stderr, "\tExpected Digest:\t");
		for (int ii = 0; ii < SHA512_DIGEST_LENGTH; ii++) {
			fprintf(stderr, "%02hhX", digest2[ii]);
		}
		fprintf(stderr, "\n\tActual Digest: \t\t");
		for (int ii = 0; ii < OSHA512_DIGEST_LENGTH; ii++) {
			uint8_t temp;
			revealOblivChar(&temp, digest[ii], 0);
			fprintf(stderr, "%02hhX", temp);
		}
	}

	fprintf(stderr, "\n");

}